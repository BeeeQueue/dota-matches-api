{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": ["name", "type", "compatibility_date"],
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["javascript", "webpack", "rust"],
      "deprecationMessage": "Most common features now work out of the box with wrangler, including modules, jsx, typescript, etc. If you need anything more, use a custom build."
    },
    "account_id": {
      "type": "string"
    },
    "usage_model": {
      "type": "string",
      "enum": ["bundled"]
    },
    "compatibility_date": {
      "type": "string",
      "pattern": "\\d{4}-\\d{2}-\\d{2}"
    },
    "compatibility_flags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "workers_dev": {
      "type": "boolean"
    },
    "route": {
      "type": "string"
    },
    "zone_id": {
      "type": "string"
    },
    "build": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string"
        },
        "cwd": {
          "type": "string"
        },
        "watch_dir": {
          "type": "string"
        },
        "upload": {
          "type": "object",
          "properties": {
            "format": {
              "type": "string",
              "enum": ["modules"],
              "deprecationMessage": "The format is inferred automatically from the code."
            },
            "dir": {
              "type": "string",
              "default": "dist"
            },
            "main": {
              "type": "string"
            },
            "rules": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["ESModule"],
                  "globs": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "triggers": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "crons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "site": {
      "type": "object",
      "properties": {
        "bucket": {
          "type": "string"
        },
        "include": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "vars": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^\\w+$": {
          "type": "string"
        }
      }
    },
    "kv_namespaces": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["binding", "id", "preview_id"],
        "properties": {
          "binding": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "preview_id": {
            "type": "string"
          }
        }
      }
    },
    "r2_buckets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["binding", "bucket_name"],
        "properties": {
          "binding": {
            "type": "string"
          },
          "bucket_name": {
            "type": "string"
          }
        }
      }
    },
    "durable_objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "class_name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "class_name": {
            "type": "string"
          }
        }
      }
    },
    "miniflare": {
      "type": "object",
      "properties": {
        "build_watch_dirs ": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "live_reload  ": {
          "type": "boolean"
        },
        "r2_persist": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "string"
            }
          ]
        }
      }
    }
  }
}
